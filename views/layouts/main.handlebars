      <a href="#email"><span class="white-text email">{{user.email}}</span></a>
      {{/if}}
    </div></li>
    <li class= "list-item"><a href="/">Home</a></li>
    <li class= "list-item"><a href="/dashboard">User</a></li>
    <li><div class="divider"></div></li>
    <li><a class="subheader">Genres</a></li>
