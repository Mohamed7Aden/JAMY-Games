<body>
  <header class="display-flex justify-space-between align-center navbar-fixed">
    <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo center">JAMY GAMES</a>
      <ul>
        <li>
          <a href="#" data-target="slide-out" class="sidenav-trigger show-on-large left hide-on-med-and-down"><i class="material-icons">menu</i></a>
        </li>
      </ul>
      <ul class="right hide-med-and-down">
        <li>
          <a href="#"><i class="material-icons">person_outline</i></a>
        </li>
        <li>
          {{#if loggedIn}}
          <button id="logout">Logout</button>
          {{else}}
          <a href="/login"><button>Log In</button></a>
         <li><a href="/signup"><button>Sign Up</button></a></li>
          {{/if}}
        </li>
      </ul>
    </div>
  </nav>
  
